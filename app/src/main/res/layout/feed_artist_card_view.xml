<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="11dp">

        <ImageView
            android:id="@+id/fd_ic_release_type"
            android:layout_above="@+id/separator"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dp"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/fd_release_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/fd_ic_release_type"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"
            />

        <TextView
            android:id="@+id/fd_album_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:textSize="12sp"
           />

        <View android:id="@+id/separator"
            android:background="#ccc"
            android:layout_width = "fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/fd_album_date"
            android:layout_centerVertical ="true"
            />

        <ImageView
            android:id="@+id/fd_album_photo"
            android:layout_below="@+id/separator"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/fd_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/fd_album_photo"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/separator"
            android:textColor="#000"
            android:layout_marginTop="8dp"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/fd_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fd_album_name"
            android:layout_alignLeft="@+id/fd_album_name"
            android:textSize="13sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/fd_album_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fd_artist_name"
            android:layout_alignLeft="@+id/fd_artist_name"
            android:textSize="13sp"
            android:layout_marginTop="4dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>